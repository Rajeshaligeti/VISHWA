# Supabase local configuration template
# Copy this to config.toml and update with your actual project details

project_id = "your-supabase-project-id"

[api]
enabled = true
port = 54321
schemas = ["public", "graphql_public"]
extra_search_path = ["public", "extensions"]
max_rows = 1000

[auth]
enabled = true
port = 54324
external_url = "http://localhost:54324"
jwt_expiry = 3600
refresh_token_rotation_enabled = true
refresh_token_reuse_interval = 10
enable_manual_linking = false

[realtime]
enabled = true
port = 54325

[storage]
enabled = true
port = 54326
file_size_limit = "50MiB"

[edge_functions]
enabled = true
port = 54327

[db]
port = 54322

[studio]
enabled = true
port = 54323